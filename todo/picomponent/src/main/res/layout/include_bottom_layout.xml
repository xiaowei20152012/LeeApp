<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp">

    <RelativeLayout
        android:id="@+id/home_shelf_rl"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/shelf_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tab_icon_recommend_selector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shelf_iv"
            android:layout_centerHorizontal="true"
            android:text="首页"
            android:textColor="@drawable/tab_text_selector"
            android:textSize="13sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_store_rl"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/store_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tab_icon_ranking_selector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/store_iv"
            android:layout_centerHorizontal="true"
            android:text="记录"
            android:textColor="@drawable/tab_text_selector"
            android:textSize="13sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_free_rl"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/free_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tab_icon_free_selector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/free_iv"
            android:layout_centerHorizontal="true"
            android:text="发现"
            android:textColor="@drawable/tab_text_selector"
            android:textSize="13sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_space_rl"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/space_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tab_icon_space_selector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/space_iv"
            android:layout_centerHorizontal="true"
            android:text="我的"
            android:textColor="@drawable/tab_text_selector"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/space_point_tv"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_toRightOf="@id/space_iv"
            android:background="@drawable/tab_point_bg"/>
    </RelativeLayout>

</LinearLayout>
